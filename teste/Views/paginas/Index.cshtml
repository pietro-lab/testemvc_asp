@{
    ViewBag.Title = "Paginas";
    List<busines.Pagina> paginas = ViewBag.paginas;
}
@if(TempData["sucesso"] != null)
{
    <div class="alert alert-success">@TempData["sucesso"]</div>
}
@if(TempData["erro"] != null)
{
    <div class="alert alert-success">@TempData["erro"]</div>
}


<div class="jumbotron">
    <h1>Nova pagina</h1>
    <div>
        <a href="/paginas/novo" class="btn btn-default">nova pagina</a>
        <table>
            <tr>
                <td>ID</td>
                <td>Nome</td>
                <td>Data</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var p in paginas)
            {

                <tr>
                    <td>@p.id</td>
                    <td>@p.nome</td>
                    <td>@p.data</td>
                    <td><a href="/paginas/@p.id/editar" class="btn btn-primary"> alterar cadastro </a></td>
                    <td><a href="/paginas/@p.id/Excluir" class="btn btn-danger" onclick="ValidaExclusao(@p.id, event)"> excluir cadastro</a></td>
                    <td><a href="/paginas/@p.id/preview" target="_blank" class="btn btn-warning">preview</a></td>
                </tr>
            }
        </table>




    </div>

</div>

