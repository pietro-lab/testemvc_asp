@{
    ViewBag.Title = "Paginas";
    List<busines.Pagina> paginas = ViewBag.paginas;
}

<div class="jumbotron">
    <h1>Nova pagina</h1>
    <div>
        <a href="/paginas/novo" class="btn btn-default">nova pagina</a>
        <table>
            <tr>
                <td>ID</td>
                <td>Nome</td>
                <td>Data</td>
                <td></td>
            </tr>
            @foreach (var p in paginas)
            {

                <tr>
                    <td>@p.id</td>
                    <td>@p.nome</td>
                    <td>@p.data</td>
                    <td><a href="/paginas/@p.id/editar">alterar</a></td>
                </tr>
            }
        </table>




    </div>

</div>

